# The global section has parameters that apply globally to the relayer operation.
[global]
log_level = 'debug'

[mode]
[mode.clients]
enabled = true
refresh = true
misbehaviour = false

[mode.connections]
enabled = false

[mode.channels]
enabled = false

[mode.packets]
enabled = true
clear_interval = 100
clear_on_start = true
tx_confirmation = true
auto_register_counterparty_payee = false

[rest]
enabled = false
host = '0.0.0.0'
port = 3000

[telemetry]
enabled = true
host = '0.0.0.0'
port = {{ .TelemetryPort }}

[[chains]]
id = '{{ .SourceChainID }}'
rpc_addr = '{{ .SourceRPCURL }}'
rpc_timeout = '30s'
grpc_addr = '{{ .SourceGRPCURL }}'
event_source = { mode = 'pull', interval = '1s' }
account_prefix = '{{ .SourceAccountPrefix }}'
key_name = 'source-key'
store_prefix = 'ibc'
default_gas = 100000
max_gas = {{ .SourceMaxGas }}
gas_price = { price = {{ .SourceGasPrice.Amount }}, denom = '{{ .SourceGasPrice.Denom }}' }
gas_multiplier = 1.5
clock_drift = '60s'
trust_threshold = { numerator = '1', denominator = '3' }
address_type = { derivation = 'cosmos' }
packet_filter = { policy = 'allow', list = [['transfer', '*'], ['wasm*', '*']] }

[[chains]]
id = '{{ .PeerChainID }}'
rpc_addr = '{{ .PeerRPCURL }}'
rpc_timeout = '30s'
grpc_addr = '{{ .PeerGRPCURL }}'
event_source = { mode = 'pull', interval = '1s' }
account_prefix = '{{ .PeerAccountPrefix }}'
key_name = 'peer-key'
store_prefix = 'ibc'
default_gas = 100000
max_gas = {{ .PeerMaxGas }}
gas_price = { price = {{ .PeerGasPrice.Amount }}, denom = '{{ .PeerGasPrice.Denom }}' }
gas_multiplier = 1.5
clock_drift = '60s'
trust_threshold = { numerator = '1', denominator = '3' }
address_type = { derivation = 'cosmos' }
packet_filter = { policy = 'allow', list = [['transfer', '*'], ['wasm*', '*']] }